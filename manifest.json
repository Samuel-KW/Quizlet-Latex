{
  "name": "Mastering Physics",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Utilities for Mastering physis",
  "homepage_url": "https://github.com/Samuel-KW/Mastering-Physics",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "src/serviceworker/sw.js",
    "type": "module"
  },
  "permissions": [
    "contentSettings",
    "unlimitedStorage",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://session.masteringphysics.com/myct/itemView*",
        "https://mylabmastering.pearson.com/api/courses/*/launch?*"
      ],
      "js": [
        "src/inject/inject.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["src/inject/index.js"],
    "matches": ["<all_urls>"]
  }]
}